@{
    ViewBag.Title = "Krimi rad";
}

<div class="row">

    <div ng-controller="PrijavaCtrl" class="col-md-3">

        <ul class="list-group">
            <li ng-repeat="p in prijave" class="list-group-item">{{ p.TipDjela.Naziv }}</li>

        </ul>
    </div>


    <div ng-controller="MapCtrl" class="col-md-9">
        <div map-lazy-load="https://maps.google.com/maps/api/js">
            <ng-map center="43.849886, 18.355413" zoom="12">
                <marker ng-repeat="p in prijave" position="[{{p.Latituda}} , {{p.Longituda}}]" title="{{p.Adresa}}"></marker>
                
            </ng-map>
        </div>
    </div>

</div>


<div class="modal fade" ng-controller="CreatePrijavaCtrl" id="myModal" tabindex="-1" role="dialog" aria-labelledby="modalCreatePrijava-label" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <ng-view>

            </ng-view>
        </div>
    </div>
</div>


