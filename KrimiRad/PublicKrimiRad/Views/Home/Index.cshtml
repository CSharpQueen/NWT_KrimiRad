@{
    ViewBag.Title = "Krimi rad";
}

<div class="row">

    <ng-view>

    </ng-view>

    <br />

    <br />

    <h2 class="jumbotron text-center">Krimi rad</h2>

    <div ng-controller="MapCtrl" class="row">
        <div map-lazy-load="https://maps.google.com/maps/api/js">
            <ng-map style="height:600px; width:100%" center="43.849886, 18.355413" zoom="12">
                <marker ng-repeat="p in prijave" icon="{{ p.Rijesen ? '/Content/img/circle_green.png' : '/Content/img/circle_red.png'}}" 
                        position="[{{p.Latituda}} , {{p.Longituda}}]" title="{{p.TipDjelaNaziv}}" id="{{$index}}" 
                        on-click="showDetail(event, id)"></marker>
                <info-window id="foo-iw">
                    <div ng-non-bindable="">                        
                        {{ 'TIPDJELA' | translate }}: {{prijava.TipDjelaNaziv}}<br />
                        {{ 'OPSTINA' | translate }}: {{prijava.Opstina}}<br />
                        {{ 'ADRESA' | translate }}: {{prijava.Adresa}}<br />        
                        <p ng-if="prijava.Rijesen">
                            {{ 'RIJESEN' | translate }}: {{ 'DA' | translate  }}
                        </p>
                        <p ng-if="!prijava.Rijesen">
                            {{ 'RIJESEN' | translate }}:
                            {{'NE' | translate}}
                        </p>                                 
                    </div>
                </info-window>
            </ng-map>
        </div>
    </div>

</div>

           


