<div ng-controller="CreatePrijavaCtrl">
    <h4 class="jumbotron text-center">{{ 'PRIJAVADJELA' | translate }}</h4>
    <br />
    <div ng-show="poruka !== ''" class="alert alert-warning alert-dismissable">
        <button type="button" class="close" ng-click="sakrijAlert()" aria-hidden="true">X</button>
        <p>{{ poruka }}</p>
    </div>
    <form name="prijavaForm">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-4">
                <div class="form-group">
                    {{ 'TIPDJELA' | translate }}
                    <br>
                    <select style="max-width:100%" class="form-control" ng-model="prijava.TipDjelaId" required>
                        <option value="">Odaberite tip djela</option>
                        <option ng-repeat="t in tipoviDjela" value="{{t.ID}}">{{t.Naziv}}</option>
                    </select>
                </div>
                <div class="form-group">
                    {{ 'DATUMDJELA' | translate }}
                    <br>
                    <p class="input-group">
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-default" ng-click="datumOdOpen()"><i class="glyphicon glyphicon-calendar"></i></button>
                        </span>
                        <input  style="max-width:100%" type="text" class="form-control" uib-datepicker-popup="dd-MMMM-yyyy" ng-model="prijava.DatumIVrijemePocinjenjaDjela" is-open="popup1" datepicker-options="dateOptions" ng-required="true" close-text="Close" />
                    </p>
                </div>
                <div class="form-group">
                    {{ 'SLIKA/VIDEO' | translate }} <input  style="max-width:100%" type="file" ng-file-model="medij" class="form-control" multiple />
                </div>
                <div class="form-group">
                    {{ 'KOMENTAR' | translate }}
                    <br>
                    <textarea  style="max-width:100%" class="form-control" ng-model="prijava.Komentar" rows="7"></textarea>
                </div>               
            </div>

            @* mapa *@
            <div class="col-md-4">
                <div class="form-group">
                    {{ 'OPSTINA' | translate }}
                    <br>
                    <input style="max-width:100%" class="form-control" type="text" ng-model="prijava.Opstina" />
                </div>
                <div class="form-group">
                    {{ 'ADRESA' | translate }}
                    <br>
                    <input style="max-width:100%" class="form-control" type="text" ng-model="prijava.Adresa" />
                </div>
                <div class="form-group">
                    {{ 'LOKACIJA' | translate }}
                    <br>
                    <div map-lazy-load="https://maps.google.com/maps/api/js">
                        <ng-map  style="max-width:100%" center="43.849886, 18.355413" zoom="14" style="width:350px; height:300px" on-click="addMarker()">
                        </ng-map>
                    </div>
                </div>                
                <div class="form-group">
                    <input style="width:100%" type="submit" ng-click="dodajPrijavu()" class="btn btn-primary btn-lg" value="{{ 'DODAJ' | translate }}" />
                </div>
            </div>
        </div>       
    </form>
</div>

