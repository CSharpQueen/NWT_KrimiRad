
<div class="modal fade" ng-controller="CreatePrijavaCtrl" id="myModal" tabindex="-1" role="dialog" aria-labelledby="modalCreatePrijava-label" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="modalCreatePrijava-label">Prijava djela</h4>
            </div>
            <div class="modal-body">
                <form name="prijavaForm">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ 'TIPDJELA' | translate }}
                                <br>
                                <select class="form-control" ng-model="prijava.TipDjelaId">
                                    <option ng-repeat="t in tipoviDjela" value="{{t.ID}}">{{t.Naziv}}</option>
                                </select>
                            </div>
                            <div class="form-group">
                                {{ 'DATUMDJELA' | translate }}
                                <br>

                                <p class="input-group">
                                    <input type="text" class="form-control" datetime-picker="MM/dd/yyyy HH:mm" is-open="isOpen" ng-model="prijava.DatumIVrijemePocinjenjaDjela">
                                    <span class="input-group-btn">
                                        <button type="button" class="btn btn-default" ng-click="openCalendar($event)"><i class="fa fa-calendar"></i></button>
                                    </span>
                                </p>
                                @*<br> @Html.EditorFor(m => m.DatumIVrijemePocinjenjaDjela, new { ng_model = "prijava.DatumIVrijemePocinjenjaDjela", @class = "form-control", required = "Obavezno polje" })*@
                            </div>
                            <div class="form-group">
                                {{ 'SLIKA/VIDEO' | translate }}<input type="file" file-model="medij" class="form-control" multiple />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ 'LOKACIJA' | translate }}
                                <br>
                                <div ng-controller="MapCtrl">
                                    @*<div>
                                            <input type="text" ng-model>
                                        </div>*@
                                    <div map-lazy-load="https://maps.google.com/maps/api/js">
                                        <ng-map center="43.849886, 18.355413" zoom="8" style="width:350px; height:400px">
                                        </ng-map>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-md-offset-3">
                                <input type="submit" ng-click="dodajPrijavu()" class="btn btn-primary" value="Dodaj" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
