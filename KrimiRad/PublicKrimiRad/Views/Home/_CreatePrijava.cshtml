
<div class="modal fade" ng-controller="CreatePrijavaCtrl" id="myModal" tabindex="-1" role="dialog" aria-labelledby="modalCreatePrijava-label" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="modalCreatePrijava-label">{{ 'PRIJAVADJELA' | translate }}</h4>
            </div>
            <div class="modal-body">
                <div ng-show="poruka !== ''" class="alert alert-warning alert-dismissable">
                    <button type="button" class="close" ng-click="sakrijAlert()" aria-hidden="true">X</button>
                    <p>{{ poruka }}</p>
                </div>
                <form name="prijavaForm">
                    <div class="row">

                        <div class="col-md-6">
                            <div class="form-group">
                                {{ 'TIPDJELA' | translate }}
                                <br>
                                <select class="form-control" ng-model="prijava.TipDjelaId">
                                    <option ng-repeat="t in tipoviDjela" value="{{t.ID}}">{{t.Naziv}}</option>
                                </select>
                            </div>
                            <div class="form-group">
                                {{ 'DATUMDJELA' | translate }}
                                <br>
                                <input class="form-control" type="date" ng-model="prijava.DatumIVrijemePocinjenjaDjela" required />
                            </div>   
                            <div class="form-group">
                                {{ 'SLIKA/VIDEO' | translate }} <input type="file" file-model="medij" class="form-control" multiple />
                            </div>
                            @*<div class="form-group">
                                Lat
                                <br>
                                <input class="form-control" type="text" ng-model="prijava.Latitude" />
                            </div>
                            <div class="form-group">
                               Long
                                <br>
                                <input class="form-control" type="text" ng-model="prijava.Longitude" />
                            </div>*@
                            <div class="form-group">
                                {{ 'KOMENTAR' | translate }}
                                <br>
                                <textarea class="form-control" ng-model="prijava.Komentar" rows="6"></textarea>
                            </div>
                        </div>

                        @* mapa *@
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ 'OPSTINA' | translate }}
                                <br>
                                <input class="form-control" type="text" ng-model="prijava.Opstina" />
                            </div>
                            <div class="form-group">
                                {{ 'ADRESA' | translate }}
                                <br>
                                <input class="form-control" type="text" ng-model="prijava.Adresa" />
                            </div>
                            <div class="form-group">
                                {{ 'LOKACIJA' | translate }}
                                <br>
                                <div map-lazy-load="https://maps.google.com/maps/api/js">
                                    <ng-map center="43.849886, 18.355413" zoom="14" style="width:350px; height:300px" on-click="addMarker()">
                                    </ng-map>
                                </div>
                            </div>
                            </
                            <div class="form-group col-md-offset-3">
                                <input type="submit" ng-click="dodajPrijavu()" class="btn btn-primary" value="{{ 'DODAJ' | translate }}" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
