<!DOCTYPE html>
<html >
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Krimi rad</title>
    @Styles.Render("~/Content/css")    
        
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-route.min.js"></script>
    <script src="~/Scripts/angular-translate.min.js"></script>    
    <script src="~/Scripts/ng-map.min.js"></script>
            
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-translate-loader-static-files/2.11.0/angular-translate-loader-static-files.min.js"></script>    
    <script src="~/Scripts/angular-ui/ui-bootstrap.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular-animate.js"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap-tpls.min.js"></script>     

    <script src="https://www.google.com/recaptcha/api.js?onload=vcRecaptchaApiLoaded&render=explicit" async defer></script>
    <script src="~/Scripts/angular-recaptcha.min.js"></script>

    @Scripts.Render("~/bundles/angularCustom")

    <base href="/" />
    
</head>
<body ng-app="app">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Krimi Rad", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="prijava"  aria-expanded="false"> {{ 'PRIJAVI' | translate }}</a></li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="row body-content">        
        <div ng-show="loading" class="col-md-4 col-md-offset-4 text-center">
            <div class="cssload-wrap">
                <div class="cssload-circle"></div>
                <div class="cssload-circle"></div>
                <div class="cssload-circle"></div>
                <div class="cssload-circle"></div>
                <div class="cssload-circle"></div>
            </div>
        </div>
        <div class="col-md-10 col-md-offset-1">
            @RenderBody()
        </div>
    </div>
    <hr />
    <footer>
        <p class="text-center">&copy; @DateTime.Now.Year - Krimi rad</p>
    </footer>

    @RenderSection("scripts", required: false)
</body>
</html>
