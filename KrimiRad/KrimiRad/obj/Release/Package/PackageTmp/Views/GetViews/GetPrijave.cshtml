<div class="row" ng-controller="PregledMapeCtrl">

    <div class="col-md-3">
        <uib-pagination items-per-page="5" previous-text="&lsaquo;" next-text="&rsaquo;" total-items="totalItems" ng-model="currentPage" ng-change="pageChanged()"></uib-pagination>
        <uib-accordion close-others="oneAtATime">
            <uib-accordion-group heading="{{nF.TipDjela}}" ng-repeat="nF in newsFeed">
                <p>{{nF.Opstina}}</p>
                <p>{{nF.Adresa}}</p>
                <p>{{nF.DatumIVrijemePocinjenjaDjela}}</p>
            </uib-accordion-group>

        </uib-accordion>      
    </div>
    <div class="col-md-9">
        <div map-lazy-load="https://maps.google.com/maps/api/js">
            <ng-map style="height:600px;" center="43.849886, 18.355413" zoom="12">
                <marker ng-repeat="p in prijave" icon="{{ p.Rijesen ? '/Content/img/circle_green.png' : '/Content/img/circle_red.png'}}" position="[{{p.Latituda}} , {{p.Longituda}}]" title="{{p.TipDjelaNaziv}}" id="{{p.ID}}" on-click="otvoriPrijavu($event)"></marker>
            </ng-map>
        </div>
    </div>


</div>

