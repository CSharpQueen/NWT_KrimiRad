<div ng-controller="TipDjelaCtrl">

    <a ng-click="prikaziFormuZaCreate()" class="btn btn-primary">Dodaj novi</a>    
    <button type="button" ng-show="formaZaUnos == true" class="btn btn-info" ng-click="formaZaUnos = false;">Izađi</button>
    <div ng-show="poruka != ''" class="alert alert-warning alert-dismissable">
        <button type="button" class="close" ng-click="poruka = ''" aria-hidden="true">×</button>
        {{ poruka }}
    </div>
    
    @Html.Partial("~/Areas/Administracija/Views/TipDjela/_CreateEdit.cshtml")

    <table class="table">
        <tr>
            <th>
                {{ 'NAZIV' | translate }}
            </th>
            <th>
                {{ 'STRUČNINAZIV' | translate }}
            </th>
            <th>
                {{ 'VRSTADJELA' | translate }}
            </th>
            <th></th>
        </tr>

        <tr ng-repeat="tip in tipoviDjela">
            <td>
                {{ tip.Naziv }}
            </td>
            <td>
                {{ tip.StrucniNaziv }}
            </td>
            <td>
                {{ tip.VrstaDjela }}
            </td>
            <td>
                <button class="btn btn-success" ng-click="prikaziFormuZaEdit(tip)"> {{ 'UREDI' | translate }}</button> |
                <button class="btn btn-danger" ng-click="obrisiTipDjela(tip)">{{ 'OBRIŠI' | translate }}</button>
            </td>
        </tr>
        

    </table>
    <uib-pagination items-per-page="7" previous-text="&lsaquo;" next-text="&rsaquo;" total-items="totalItems" ng-model="currentPage" ng-change="pageChanged()"></uib-pagination>


</div>