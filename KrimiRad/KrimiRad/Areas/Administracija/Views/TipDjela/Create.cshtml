@model DataAccess.Entity.TipDjela

<form ng-submit="createTipDjela()" ng-controller="tipoviDjelaCreateController">
    <div class="form-horizontal">
        <h4>Dodaj Tip djela</h4>
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.Naziv, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" ng-model="tipDjela.Naziv" class="form-control" required />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StrucniNaziv, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" ng-model="tipDjela.StrucniNaziv" class="form-control" required />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.VrstaDjela, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" ng-model="tipDjela.VrstaDjela" class="form-control" required />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Opis, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" ng-model="tipDjela.Opis" class="form-control" required />
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Dodaj" />
        </div>
    </div>
</form>
