
<div class="row" ng-controller="PrijavaDetalji">
    <div class="col-md-6 col-lg-5">
        <p class="naslov">{{'PRIJAVADJELA' |translate}}:</p>
        <dl class="dl-horizontal prijava">
          
            <dt>
                {{'TIPDJELA' | translate}}
            </dt>

            <dd>
                {{prijava.TipDjela.Naziv}}

            </dd>
            <dt>
                {{'DATUMIVRIJEMEPRIJAVE' | translate}}
            </dt>

            <dd>
                {{prijava.DatumIVrijemePrijave}}

            </dd>

            <dt>
                {{'DATUMIVRIJEMEPOCINJENJA' | translate}}
            </dt>

            <dd>
                {{prijava.DatumIVrijemePocinjenjaDjela}}
            </dd>

            <dt>
                {{'OPCINA' |translate}}
            </dt>

            <dd>
                {{ prijava.Opstina}}
            </dd>

            <dt>
                {{'ADRESA' |translate}}
            </dt>

            <dd>
                {{prijava.Adresa}}
            </dd>
            <dt>
                {{'KOMENTAR' |translate}}
            </dt>
            <dd>
                {{prijava.Komentar}}
            </dd>

        </dl>
    </div>
    <div class="col-md-6 col-lg-7">
        <div map-lazy-load="https://maps.google.com/maps/api/js">
            <ng-map center="[{{prijava.Latituda}} , {{prijava.Longituda}}]" zoom="14">
                <marker position="[{{prijava.Latituda}} , {{prijava.Longituda}}]" title="{{prijava.Adresa}}"></marker>
            </ng-map>
        </div>
    </div>
</div>
<div class="container">
    <br />
        <div ng-if="slike != ''" id="my-carousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#my-carousel" ng-repeat="s in slike" ng-class="{{ $index == 1 ? 'active' : ''}}" data-slide-to="{{$index}}" class="active"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                <div ng-repeat="s in slike" ng-class="{{ $index == 1 ? 'item active' : 'item'}}">
                    <img alt="First slide" src="{{s.Url}}" width="460" style="height:345px !important;" class="img-responsive center-block">
                </div>
            </div>
            <a class="left carousel-control" href="#my-carousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#my-carousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

</div>

